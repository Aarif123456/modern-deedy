\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{local-font}[2021/05/30 Quick package to use custom fonts]

%------------------------------------------------------
% Package Imports
% Set up fonts
\RequirePackage{fontspec,xltxtra,xunicode,fontenc}
% used to set the color of text
\RequirePackage[usenames,dvipsnames]{xcolor}


%------------------------------------------------------
% Color definitions
\definecolor{date}{HTML}{666666}
\definecolor{primary}{HTML}{2b2b2b}
\definecolor{headings}{HTML}{6A6A6A}
\definecolor{subheadings}{HTML}{333333}

%------------------------------------------------------
% Set up font options
\newcommand{\fontFolder}{fonts/raleway/}
\newcommand{\fontName}{Raleway}

%------------------------------------------------------
% Command to select text - organized by increasing thickness
\newfontfamily{\customThin}[Path = \fontFolder]{\fontName-Thin}
\newcommand{\thin}[1]{\customThin\selectfont#1\normalfont}
\newfontfamily{\customExtraLight}[Path = \fontFolder]{\fontName-ExtraLight}
\newcommand{\extraLight}[1]{\customExtraLight\selectfont#1\normalfont}
\newfontfamily{\customLight}[Path = \fontFolder]{\fontName-Light}
\newcommand{\light}[1]{\customLight\selectfont#1\normalfont}

\newfontfamily{\customRegular}[Path = \fontFolder]{\fontName-Regular}
\newcommand{\regular}[1]{\customRegular\selectfont#1\normalfont}
\newfontfamily{\customMedium}[Path = \fontFolder]{\fontName-Medium}
\newcommand{\medium}[1]{\customMedium\selectfont#1\normalfont}
\newfontfamily{\customSemiBold}[Path = \fontFolder]{\fontName-SemiBold}
\newcommand{\semiBold}[1]{\customSemiBold\selectfont#1\normalfont}

\newfontfamily{\customBold}[Path = \fontFolder]{\fontName-Bold}
\newcommand{\bold}[1]{\customBold\selectfont#1\normalfont}
\newfontfamily{\customExtraBold}[Path = \fontFolder]{\fontName-ExtraBold}
\newcommand{\extraBold}[1]{\customExtraBold\selectfont#1\normalfont}
\newfontfamily{\customHeavy}[Path = \fontFolder]{\fontName-Heavy}
\newcommand{\heavy}[1]{\customHeavy\selectfont#1\normalfont}

%------------------------------------------------------
% Set main fonts
\defaultfontfeatures{Mapping=tex-text}
\setmainfont[Color=primary, Path = \fontFolder, BoldFont = \fontName-SemiBold]{\fontName-ExtraLight}
\setsansfont[Scale=MatchLowercase,Mapping=tex-text, Path = \fontFolder, BoldFont = \fontName-SemiBold]{\fontName-ExtraLight}